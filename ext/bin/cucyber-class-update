#!/bin/sh -e
git -C /var/lib/git/cucyber/website fetch --all && git -C /var/lib/git/cucyber/website reset --hard origin/dev
git -C /var/lib/git/cucyber/class fetch --all && git -C /var/lib/git/cucyber/class reset --hard origin/master
make -C /var/lib/git/cucyber/class clean
make -C /var/lib/git/cucyber/class -B reveal.js/package.json
make -C /var/lib/git/cucyber/class update
